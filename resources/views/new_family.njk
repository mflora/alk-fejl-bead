{% extends "base_nav.njk" %}

{% block scripts %}
  <script src="/family.js"></script>
{% endblock %}

{% block content %}
<form class="form-horizontal create-form" method="POST">
    {{ csrfField }}
  <fieldset>
    <legend>Család alapítása</legend>

    <div class="form-group">
      <label for="title" class="col-lg-2 control-label">Cím</label>
      <div class="col-lg-3">
        <input type="text" class="form-control" id="inputFamily" name="family" }}" placeholder="Családnév" value="{{ old('family') }}">
      </div>
    </div>
    
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <button type="submit" class="btn btn-danger">Létrehoz</button>
      </div>
    </div>
  </fieldset>
</form>
{% endblock %}